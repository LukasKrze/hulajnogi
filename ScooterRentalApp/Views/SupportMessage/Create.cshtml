@model ScooterRentalApp.Data.SupportMessage

@{
    ViewData["Title"] = "Utwórz";
}

<h1>Utwórz</h1>

<h4>Wiadomość do działu wsparcia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (User.IsInRole(SystemRoles.Administrator))
            {
                <div class="form-group">
                    @Html.LabelFor(model => model.Client, "Klienci")
                    @Html.DropDownList("clientId", (IEnumerable<SelectListItem>)ViewBag.Clients, "Wybierz klienta", new { @class = "form-control" })
                </div>
            }
            <div class="form-group">
                <label asp-for="Message" class="control-label">Wiadomość</label>
                <textarea asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-clientId="@ViewBag.ClientId">Powrót do listy</a>
</div>
