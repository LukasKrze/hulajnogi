@model ScooterRentalApp.Models.PaymentViewModel

@{
    ViewData["Title"] = "Szczegóły płatności dodatkowej";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Szczegóły płatności dodatkowej</h1>

<div>
    <img src="/images/scooters/@Model.ScooterPicture" class="picture" />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SerialNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SerialNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.From)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.From)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlannedTo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlannedTo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.To)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.To)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HoursToPay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoursToPay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RecentCost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecentCost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>

    </dl>
</div>

<div>
    <form asp-action="ConfirmPaymentAtReturn">
        <input type="hidden" asp-for="Price" />
        <input type="hidden" asp-for="RentalId" />
        <input type="hidden" asp-for="Model" />
        <input type="hidden" asp-for="Cost" />
        <input type="hidden" asp-for="RecentCost" />
        <input type="hidden" asp-for="To" />
        <input type="hidden" asp-for="PlannedTo" />
        <input type="hidden" asp-for="From" />
        <input type="hidden" asp-for="SerialNumber" />
        <input type="hidden" asp-for="HoursToPay" />
        <input type="hidden" asp-for="ScooterPicture" />

        <div class="form-check">
            <input asp-for="Complaint" type="checkbox" class="form-check-input" /> Chcę złożyć reklamację
        </div>

        <div class="form-group">
            <input type="submit" value="Potwiedzam uiszczenie opłaty i zwrot" class="btn btn-primary" />
        </div>

    </form>
    <a asp-action="Index" asp-controller="Reservation">Anuluj</a>
</div>
