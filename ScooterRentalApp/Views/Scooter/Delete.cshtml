@model ScooterRentalApp.Models.ScooterViewModel

@{
    ViewData["Title"] = "Usuń";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Usuń</h1>

<h3>Czy na pewno chcesz usunąć tę hulajnogę?</h3>
<div>
    @if (Model.Type == 1)
    {
        <h4 class="control-label">Hulajnoga manualna</h4>
    }
    @if (Model.Type == 2)
    {
        <h4 class="control-label">Hulajnoga elektryczna</h4>
    }
    <hr />
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SerialNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SerialNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaxSpeed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaxSpeed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Range)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Range)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HasKickstand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HasKickstand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.YearOfProduction)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YearOfProduction)
        </dd>
        @if (Model.Type == 1)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.WheelSize)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.WheelSize)
            </dd>
        }
        @if (Model.Type == 2)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BatteryCapacity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BatteryCapacity)
            </dd>

        }
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót do listy</a>
    </form>
</div>
