@model ScooterRentalApp.Data.Rental

@{
    ViewBag.Title = "Nowe wypożyczenie";
}

<h2>Nowe wypożyczenie</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Client)
            @Html.DropDownList("Id", null, htmlAttributes: new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Scooter)
            @Html.DropDownList("Id", null, htmlAttributes: new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PlannedReturnDate)
            @Html.EditorFor(model => model.PlannedReturnDate, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
        </div>

        <button type="submit" class="btn btn-primary">Wypożycz</button>
    </div>
}
