@model ScooterRentalApp.Data.Rental

@{
    ViewBag.Title = "Nowa rezerwacja";
}

<h2>Nowa rezerwacja</h2>

<span class="text-danger">@ViewBag.Validation</span>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <img src="/images/scooters/@Model.Scooter.Picture" class="picture" />
    <div class="form-horizontal">
        <div class="form-group">
            Hulajnoga
            @Html.DisplayTextFor(model => model.Scooter.Model) - @Html.DisplayTextFor(model => model.Scooter.SerialNumber)
        </div>

        <div class="form-group">
            Data wypożyczenia
            @Html.EditorFor(model => model.RentalDate, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
        </div>

        <div class="form-group">
            Planowana data zwrotu
            @Html.EditorFor(model => model.PlannedReturnDate, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
        </div>

        <button type="submit" class="btn btn-primary">Rezerwuj</button>
        <a asp-action="Index" asp-controller="Scooter">Anuluj</a>
    </div>
}
